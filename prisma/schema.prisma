// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-dart"
  previewFeatures = ["interactiveTransactions"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Author {
  firstName String
  lastName  String
  id        String    @id
  imageUrl  String?
  messages  Message[]
}

model Message {
  id        String   @id
  type      String
  text      String
  createdAt DateTime
  uri       String?
  name      String?
  size      Int?
  height    String?
  author    Author   @relation(fields: [authorId], references: [id])
  authorId  String
}